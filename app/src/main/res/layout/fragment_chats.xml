<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/sendMessageTv"
        android:textSize="20sp"
        android:textColor="@color/text_color1"
        android:fontFamily="@font/julee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="Send Your First\nMessage!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/top_card"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/teal_200"
            android:layout_height="match_parent"
            >
            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/user_image_view"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/julee"
                app:layout_constraintEnd_toStartOf="@id/random_icon"
                app:layout_constraintTop_toTopOf="@id/user_image_view"
                app:layout_constraintBottom_toBottomOf="@id/user_image_view"
                android:text="Welcome"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/user_image_view"
                android:textColor="@color/text_color1"
                android:textSize="27sp" />
            <ImageView
                android:id="@+id/random_icon"
                android:src="@drawable/ic_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="30dp"
                android:layout_marginEnd="20dp"
                android:layout_height="30dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chats_recycler_view"
        app:layout_constraintTop_toBottomOf="@id/top_card"
        app:layout_constraintBottom_toTopOf="@id/bottom_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_card"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/purple_500"
        android:layout_height="match_parent"
        >
        <EditText
            android:id="@+id/message_ed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/send_btn"
            android:hint="Type Message..."
            android:fontFamily="@font/julee"
            android:textColorHint="@color/text_color_1_light"
            android:textColor="@color/text_color1"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_height="match_parent"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/send_btn"
            app:cardBackgroundColor="@color/teal_700"
            android:layout_width="50dp"
            app:cardCornerRadius="50dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="50dp">
            <ImageView
                android:src="@drawable/ic_send"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>