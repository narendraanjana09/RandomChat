<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    <ImageView
        android:background="@drawable/ic_rectangle_7"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:background="@drawable/ic_rectangle_8"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="200dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:strokeColor="@color/teal_200"
            app:strokeWidth="4dp"
            android:layout_height="100dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/random_rv"
            tools:listitem="@layout/avtar_recyler_item"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:reverseLayout="true"
            android:visibility="visible"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="@id/card"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/random_profile_card"
            android:layout_width="100dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/randome_user_name_tv"
            android:layout_marginTop="10dp"
            app:strokeColor="@color/teal_200"
            app:strokeWidth="4dp"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/random_image_view"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/randome_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/julee"
            android:layout_margin="20dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/random_profile_card"
            app:layout_constraintEnd_toEndOf="@id/random_profile_card"
            app:layout_constraintBottom_toTopOf="@id/randome_icon"
            app:layout_constraintTop_toBottomOf="@id/random_profile_card"
            android:text="Welcome"
            android:textColor="@color/text_color1"
            android:textSize="27sp" />

        <ImageView
            android:id="@+id/randome_icon"
            android:src="@drawable/ic_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/random_rv"
            android:layout_width="50dp"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_card"
        android:layout_width="100dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/randome_icon"
        app:strokeColor="@color/teal_200"
        app:strokeWidth="4dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/image_view"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/julee"
        app:layout_constraintStart_toStartOf="@id/profile_card"
        app:layout_constraintEnd_toEndOf="@id/profile_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_card"
        android:text="Welcome"
        android:layout_margin="20dp"
        android:textColor="@color/text_color1"
        android:textSize="27sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>